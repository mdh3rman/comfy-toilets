<h1>Where to find them</h1>
<% @toilets.each do |toilet| %>
	<div class="paper">

			<h1>
				<%= link_to(toilet_path(toilet)) do %>
					<%= toilet.title %>
				<% end %>
			</h1>
    <hr/>
			<p>
				<%= toilet.description %>
			</p>
    <%= link_to('Show', toilet_path(toilet), class: 'btn')  %>
    <div class="space"></div>
	</div>
<% end %>
